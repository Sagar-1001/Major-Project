<% layout("/layout/boilerplate") %>
<body>
  
<form method="post" action="/listing" novalidate class="needs-validation" enctype="multipart/form-data">  
<div class="col-8 offset-2">
    <h3>Create a new listing</h3>
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input type="text" placeholder="Enter Name" name="listing[title]" class="form-control" required/>
      </div>

      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea name="listing[description]" class="form-control" required></textarea>
      </div>

      <div class="mb-3">
        <label for="image" class="form-label">Image </label>
        <input type="file" name="listing[image]" class="form-control" required>
      </div>

       <div class="row">

        <div class="mb-3 col-md-4">
            <label for="price" class="form-label" >Price</label>
            <input  placeholder="Enter Price" name="listing[price]" class="form-control" required/>
          </div>
        
          <div class="mb-3 col-md-8">
            <label for="country" class="form-label">Country</label>
            <input type="text" placeholder="Enter Country" name="listing[country]" class="form-control" required/>
          </div>
         
       </div>
     
      <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input type="text" placeholder="Enter Location" name="listing[location]" class="form-control" required >
      </div>

      <button class="btn add-btn">Add</button>
</div>
 </form>
</body>
